<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StreamMapValtech.View">

    <Style TargetType="local:Position" >
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:Position">
                    <Grid>
                        <Line X1="{TemplateBinding X}" Y1="{TemplateBinding Y}" 
                              X2="{TemplateBinding OldX}" Y2="{TemplateBinding OldY}" 
                              Stroke="Black" StrokeThickness="0.5" />
                        <Ellipse Width="8" Height="8" Canvas.Left="{TemplateBinding X}" Canvas.Top="{TemplateBinding Y}" StrokeThickness="1" Stroke="Black" Fill="White"/>
                        <Ellipse Width="2" Height="2" Canvas.Left="{TemplateBinding OldX}" Canvas.Top="{TemplateBinding OldY}" StrokeThickness="1" Stroke="Black"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
